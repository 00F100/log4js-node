{
  "name": "log4js",
  "version": "1.1.0",
  "description": "Port of Log4js to work with node.",
  "keywords": [
    "logging",
    "log",
    "log4j",
    "node"
  ],
  "license": "Apache-2.0",
  "main": "./lib/log4js",
  "author": "Gareth Jones <gareth.nomiddlename@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nomiddlename/log4js-node.git"
  },
  "bugs": {
    "url": "http://github.com/nomiddlename/log4js-node/issues"
  },
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "clean": "find test -type f ! -name '*.json' ! -name '*.js' ! -name '.eslintrc' -delete && rm *.log",
    "lint": "eslint lib/ test/",
    "precommit": "npm test",
    "posttest": "npm run clean",
    "pretest": "eslint lib/**/*",
    "test": "tape 'test/tape/**/*.js' && vows test/vows/*.js"
  },
  "directories": {
    "test": "test",
    "lib": "lib"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "semver": "^5.3.0",
    "streamroller": "^0.2.1"
  },
  "devDependencies": {
    "conventional-changelog": "^1.1.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.0.0",
    "husky": "^0.12.0",
    "sandboxed-module": "^2.0.3",
    "tape": "^4.6.2",
    "validate-commit-msg": "^2.6.1",
    "vows": "0.8.0"
  },
  "optionalDependencies": {
    "hipchat-notifier": "^1.1.0",
    "loggly": "^1.1.0",
    "mailgun-js": "^0.7.0",
    "nodemailer": "^2.5.0",
    "slack-node": "~0.2.0",
    "axios": "^0.15.0"
  },
  "browser": {
    "os": false
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "example",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "\n# allowed type: feat, fix, docs, style, refactor, example, perf, test, chore, revert\n# subject no more than 50 chars\n# a body line no more than 72 chars"
    }
  },
  "peerDependencies": {
    "axios": "^0.15.3"
  }
}
